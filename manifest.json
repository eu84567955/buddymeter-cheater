{
		"name": "Buddy meter 簡易外掛",
		"version": "1.0.0",
		"manifest_version": 2,
		"description": "讓你能手動定義分數，並能自動答對所有題目。",
		"icons" : {
			"16" : "icon.png",
			"48" : "icon.png",
			"128" : "icon.png"
		},
		"browser_action": {
			"default_title": "Buddy meter 簡易外掛"
		},
		"content_scripts": [  
			{
				"matches": [
					"https://buddymeter.com/quiz.html?q=*"
				],
				"js": [
					"js/contentScript.js"
				],
				"all_frames": true,
				"run_at": "document_idle"
			}
		],
		"web_accessible_resources" : [
			"js/script.js"
		]
	}